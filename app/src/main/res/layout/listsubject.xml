<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#dbe5f1"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="Môn học"
            android:textSize="25sp"
            android:textColor="#000000"
            android:id="@+id/TextViewSubjectTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Số tín chỉ: "
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="3"
                android:textSize="20sp"
                android:textColor="#000000"
                android:id="@+id/TextViewCredit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <ImageButton
        android:src="@drawable/ic_baseline_subject_24"
        android:layout_marginTop="25dp"
        android:id="@+id/subjectInformation"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <ImageButton
        android:layout_marginStart="5dp"
        android:src="@drawable/ic_baseline_update_24"
        android:layout_marginTop="25dp"
        android:id="@+id/subjectUpdate"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <ImageButton
        android:layout_marginStart="5dp"
        android:src="@drawable/ic_baseline_delete_24"
        android:layout_marginTop="25dp"
        android:id="@+id/subjectDelete"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
</LinearLayout>


